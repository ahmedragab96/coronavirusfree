{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  // "typeRoots": ["./node_modules/@types/"],
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "exclude": [
      "node_modules"
  ],
  "typeRoots": [
    "./functions/node_modules/@types"
  ],
  "skipLibCheck": true
}
